<!-- Page Content -->
<div class="container">

</div>

<!-- fullwidth map-->
<div class="map-container col-md-12 mt-5">
    <!--map controls-->
    <div class="d-flex flex-row">
        <div class="mr-auto">
            Locate your location for more infomations
        </div>
        <div>
            <div class="form-check form-check-inline">
                <input type="checkbox" id="inundationToggle" class="form-check-input"  onchange="inundationToggle()">
