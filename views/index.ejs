            </div>

            <div class="form-check form-check-inline">
                <input type="checkbox" id="driveToggle" class="form-check-input"  onchange="driveToggle()">
                <label for="driveToggle" class="form-check-label" >Drive</label>
            </div>

            <div class="form-check form-check-inline">
                <input type="checkbox" id="walkToggle" class="form-check-input"  onchange="walkToggle()">
                <label for="walkToggle" class="form-check-label" >Walk</label>
            </div>

        </div>
        <div class="ml-auto">
            <input type="button" id="navigationLocator" class="mx-2" value="Locate" >
            <input type="button" id="onSearchLocator" class="mx-2" value="Search Adress" >
        </div>

    </div>

