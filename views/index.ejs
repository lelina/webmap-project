<body>

<!-- Navigation -->
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-success fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">Tsunami Hazard Map</a>
        <button class="navbar-toggler navbar-toggler-right" type="button"
                data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
            </ul>
            <div class="navbar-nav ml-auto">
                <% if (currentUser === undefined) { %>
                <a class="btn btn-danger" style="margin: 0 0.5rem" href="/register"
                   role="button">Sign Up</a>
                <a class="btn btn-dark" style="margin: 0 0.5rem" href="/login"
                   role="button">Sign In</a>
                <% }
                else { %>
                Hello <%= currentUser.username %>
                <% } %>
            </div>
        </div>
    </div>
</nav>

<!-- Page Content -->
<div class="container-fluid">

    <div class="row mb-2">
        <div class="col <%= alertPanel.appearanceColor() %> alert-panel js-alert-panel">
            <h4 class="text-center"><%= alertPanel.date %></h4>
            <% if (alertPanel.futureRisk.isExisted === false) { %>
            <div class="row">
                <div class="col-md-3"><img class="alert-panel_icon"
                                           src="/img/index_relax-icon.png"/></div>
                <div class="col-md-9"><h2>Phew! No tsunami risk now. You can relax.</h2>
                </div>
            </div>
            <% }
            else { %>
            <div class="row">
                <div class="col-md-2"><img class="alert-panel_icon"
                                           src="/img/index_alert-icon.ico"/></div>
                <div class="col-md-10"><h2>Oh no! There are tsunami risks in this area.
                        RUN!</h2></div>
            </div>
            <% } %>
        </div>
    </div>

    <div class="row mr-2 ml-2">
