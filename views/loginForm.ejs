<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>
    <link href="/assets/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet"/>
    <!-- inject:css -->
    <!-- endinject -->

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
        <a class="navbar-brand" href="/">Tsunami Hazard Map</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
            </ul>
            <div class="navbar-nav ml-auto">
                <%if (currentUser === undefined) {%>
                <a class="btn btn-danger" style="margin: 0 0.5rem" href="/register" role="button">Sign Up</a>
                <a class="btn btn-dark" style="margin: 0 0.5rem" href="/login" role="button">Sign In</a>
                <%}
                else {%>
                Hello <%=currentUser.username%>
                <%}%>
            </div>
        </div>
    </div>
</nav>
    <div class="container-fluid">
        <div class="form-container w-50 my-5 p-3 mx-auto border border-danger">
            <form action="/login" method="post">
                <h2 class="text-center">Login</h2>
                <div class="form-group">
                    <label for="usernameLogin">Your Username:</label>
                    <input type="text" class="form-control" name="username" id="usernameLogin" placeholder="Your Username" required/>
                </div>
                <div class="form-group">
                    <label for="passwordLogin">Password:</label>
                    <input type="password" class="form-control" name="password" id="passwordLogin" placeholder="Your Password" required/>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Login</button>
                <small>Haven't registered yet? <a href="/register">Register now!</a></small>
            </form>
        </div>
    </div>
<!-- inject:js -->
<!-- endinject -->
<script src="/assets/jquery/jquery.min.js"></script>
<script src="/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>
